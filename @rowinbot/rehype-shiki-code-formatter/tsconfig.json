{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"]
}
